{
    // * ==============================================================================
    // * Theme && UI
    // * ==============================================================================
    "workbench.colorTheme": "Vesper",
    "workbench.iconTheme": "eq-material-theme-icons",
    "editor.fontFamily": "MesloLGS NF, Consolas, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.lineHeight": 3,
    "editor.letterSpacing": 0.5,
    "editor.tabSize": 2,
    "editor.lineNumbers": "relative",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ]
    },

    // * ==============================================================================
    // * General settings
    // * ==============================================================================
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.parameterHints.enabled": false,
    "editor.lightbulb.enabled": "off",
    "editor.hover.enabled": false,
    "editor.showFoldingControls": "never",
    "editor.guides.indentation": false,
    "editor.renderWhitespace": "boundary",
    "editor.renderLineHighlight": "gutter",
    "editor.occurrencesHighlight": "off",
    "editor.selectionHighlight": false,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "auto",
    "editor.scrollbar.horizontalScrollbarSize": 8,
    "editor.scrollbar.verticalScrollbarSize": 8,
    "editor.overviewRulerBorder": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.matchBrackets": "near",
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "none",
    "editor.codeLens": false,
    "editor.stickyScroll.enabled": false,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.linkedEditing": true,
    "editor.formatOnSave": true,
    "editor.snippetSuggestions": "top",
    "workbench.tree.renderIndentGuides": "none",
    "workbench.tree.indent": 10,
    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "files.enableTrash": true,
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "afterDelay",
    "telemetry.telemetryLevel": "off",
    "git.decorations.enabled": false,
    "git.openRepositoryInParentFolders": "never",
    "security.workspace.trust.untrustedFiles": "open",
    "extensions.closeExtensionDetailsOnViewChange": true,
    "terminal.integrated.defaultProfile.windows": "PowerShell",

    // * ==============================================================================
    // * Customization settings
    // * ==============================================================================
    "workbench.colorCustomizations": {
        "editorBracketHighlight.foreground1": "#FFE19E",
        "editorBracketHighlight.foreground2": "#FF8A94",
        "editorBracketHighlight.foreground3": "#8AD5FF",
        "editorBracketHighlight.foreground4": "#FFC28B",
        "editorBracketHighlight.foreground5": "#B9F2A6",
        "editorBracketHighlight.foreground6": "#EFA6FF",
        "editorCursor.background": "#000000",
        "widget.border": "#2cccff",
        "widget.shadow": "#2cccff",
        "focusBorder": "#2cccff",
        "terminalCursor.foreground": "#2dd0dcee",
        "editorOverviewRuler.wordHighlightStrongForeground": "#0000",
        "editorOverviewRuler.selectionHighlightForeground": "#0000",
        "editorOverviewRuler.rangeHighlightForeground": "#0000",
        "editorOverviewRuler.wordHighlightForeground": "#0000",
        "editorOverviewRuler.bracketMatchForeground": "#0000",
        "editorOverviewRuler.findMatchForeground": "#0000",
        "editorOverviewRuler.modifiedForeground": "#0000",
        "editorOverviewRuler.deletedForeground": "#0000",
        "editorOverviewRuler.warningForeground": "#0000",
        "editorOverviewRuler.addedForeground": "#0000",
        "editorOverviewRuler.errorForeground": "#0000",
        "editorOverviewRuler.infoForeground": "#0000",
        "editorOverviewRuler.border": "#0000",
        "[Aura Dracula Spirit]": {
            "editor.lineHighlightBorder": "#DA70D6",
            "editorSuggestWidget.selectedBackground": "#3A334B"
        },
        "[Vesper]": {
            "editorSuggestWidget.background": "#000000",
            "editorSuggestWidget.foreground": "#abb2bf",
            "editor.lineHighlightBorder": "#FFC799",
            "editorSuggestWidget.border": "#FFc799",
            "widget.border": "#FFC799",
            "widget.shadow": "#FFC799",
            "focusBorder": "#FFC799"
        }
    },

    // * ==============================================================================
    // * Langs settings
    // * ==============================================================================
    "[json]": {
        // "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[handlebars]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[scss]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },

    // * ==============================================================================
    // * Extensions settings
    // * ==============================================================================
    "prettier.tabWidth": 4,
    "tabnine.experimentalAutoImports": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "indentRainbow.indicatorStyle": "light",
    "indentRainbow.lightIndicatorStyleLineWidth": 1,
    "indentRainbow.colors": [
        "#FFE19E",
        "#FF8A94",
        "#8AD5FF",
        "#FFC28B",
        "#B9F2A6",
        "#EFA6FF"
    ],

    // * ==============================================================================
    // * Vim setup
    // * ==============================================================================
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["Esc"]
        },
        {
            "before": ["C-h"],
            "after": ["left"]
        },
        {
            "before": ["C-j"],
            "after": ["down"]
        },
        {
            "before": ["C-k"],
            "after": ["up"]
        },
        {
            "before": ["C-l"],
            "after": ["right"]
        }
    ],
    "vim.normalModeKeyBindings": [
        // Utils
        {
            "before": ["<leader>", "n"],
            "commands": [":nohl"]
        },
        // Bookmark
        {
            "before": ["m", "m"],
            "commands": ["bookmarks.toggle"]
        },
        {
            "before": ["m", "l"],
            "commands": ["bookmarks.list"]
        },
        {
            "before": ["m", "j"],
            "commands": ["bookmarks.jumpToNext"]
        },
        {
            "before": ["m", "k"],
            "commands": ["bookmarks.jumpToPrevious"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["space", "space"],
            "after": ["<ESC>"]
        }
    ],
    "vim.leader": "\\",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-v>": false
    },
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "liveServer.settings.donotVerifyTags": true,
    "code-runner.runInTerminal": true,
    "powermode.enabled": true,
    "vscode_custom_css.imports": [
        "file:///${env:USERPROFILE}/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.7/dist/updateHandler.js",
        "file:///${env:HOME}/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.7/dist/updateHandler.js",
        "https://raw.githubusercontent.com/nhattVim/dotfiles/refs/heads/master/assets/vscode/custom.css",
        "https://raw.githubusercontent.com/nhattVim/dotfiles/refs/heads/master/assets/vscode/custom.js"
    ],

    // * ==============================================================================
    // * Hide layout
    // * ==============================================================================
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "toggle",
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    "workbench.layoutControl.enabled": false,
    "workbench.navigationControl.enabled": false,
    "breadcrumbs.enabled": false,
    "editor.minimap.enabled": false,
    "workbench.statusBar.visible": false,
    "chat.commandCenter.enabled": false,
    "workbench.activityBar.location": "hidden"
}
